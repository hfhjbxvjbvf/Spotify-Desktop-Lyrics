{
  "name": "spotify-desktop-electron",
  "version": "0.1.3",
  "private": true,
  "description": "Spotify Desktop Lyrics Prototype",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "dist": "electron-builder --win",
    "dist:publish": "electron-builder --win --publish=always"
  },
  "build": {
    "appId": "com.spotify.desktoplyrics",
    "productName": "Spotify Desktop Lyrics",
    "icon": "src/image/exe.png",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "hfhjbxvjbvf",
        "repo": "Spotify-Desktop-Lyrics"
      }
    ],
    "files": ["**/*"],
    "win": {
      "target": "nsis",
      "icon": "src/image/exe.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-updater": "^6.2.1"
  },
  "devDependencies": {
    "electron": "^29.4.0",
    "electron-builder": "^24.13.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["electron"]
  }
}
